package com.company;

//Base class
class dad1{
    int x;

    public dad1() {
        System.out.println("I am the constructor in dad class");
    }

    public dad1(int x) {
        System.out.println("I am the constructor in dad class and i have the value of "+ x );
    }
}

//Inheritance of class dad
class son1 extends dad1{
    int y;
    public son1() {

        System.out.println("I am the constructor in son class");
    }

    public son1(int x,int y)
    {
        super(x);
        System.out.println("I am the constructor in son class and i have the value of  "+ y);
    }
}

//Inheritance of class son
class grandchild1 extends son1{
    int z;

    public grandchild1()
    {
        System.out.println("I am the constructor in grandchild class ");
    }
    public grandchild1(int x,int y,int z) {
        super(x,y);
        System.out.println("I am the constructor in grandchild class and i have a value of  " + z);
    }
}
public class Constructors_In_Inheritance {
    public static void main(String[] args) {

        //Object dad
        dad1 d= new dad1();
        //Object son
        son1 s= new son1(4,7);
        //Object grandchild
        grandchild1 g= new grandchild1(1,2,3);
    }
}
